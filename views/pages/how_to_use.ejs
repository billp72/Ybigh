  	<!-- definitions Modal -->
  <div class="modal fade" id="definition" role="dialog">
    <div class="modal-dialog"> 
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">

          
        </div>
        <div class="modal-footer">
          <div class="back"></div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      <script type="text/javascript">
          function spiritual(p){ 
            var html;
            if(p === "Material_Spiritual_Converging"){
                html = "<a style=\"font-weight:700;\" onclick=\"spiritual('Spiritual')\" href=\"#\">Back</a>";
            }else{
                html = "<a style=\"font-weight:700;\" onclick=\"spiritual('Material_Spiritual_Converging')\" href=\"#\">Back</a>";
            }
              var gcontent = content[p];
              var title = p.replace(/_/g, " ");
              var modal = $("#definition");
              modal.find('.modal-title').text(title);
              modal.find('.back').empty();
              $('.modal-body').empty();
              modal.find('.modal-body').append(gcontent);
              if(p === "Spiritual" || p === "Material_Spiritual_Converging"){
                  modal.find('.back').append(html);
              }
            }
          </script>
    </div>
  </div>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  	<script type="text/javascript" src="libs/boostrap4/js/bootstrap.min.js"></script>

  	<script type="text/javascript">

  	let content = {
  		Material_Spiritual_Converging: "The words in Ybigh could be part of a terrible, a great, or any experience in between for you or others. This experience causes the word to take on special meaning for you or others. This is the process of spiritual-material converging. Converging means a unity is forming around the word in question that turns it into a symbol. The unity (and newly created symbol) consist of your knowledge of the word and your experiences with it."+  
