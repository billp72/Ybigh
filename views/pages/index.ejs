<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8">
   <title>Ybigh</title>
  <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="author" content="ybigh">
  <meta name="description" content="The HTML5 Herald">
  <link rel="stylesheet" type="text/css" href="libs/boostrap4/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>
<body>
        
<nav class="navbar navbar-expand-lg navbar-light bg-light">
          <% var dt = data.length; %>
      
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul id="menu" class="navbar-nav">
                <% for(var i=0; i<dt; i++) { %>
                    <li class="nav-item">
                        <a class="nav-link" href='/<%= data[i].link %>'>
                              <%= data[i].name %>
                          </a>
                    </li>
              <% } %>
          </ul>
      </div>
  </nav>
  
  <div id="welcome">
    <% if(!is_phone){ %>
    <p>Sign Up / Sign In</p>
    <form action="/Signup" method="post"><input type="email" name="email" placeholder="your email" value=""><button name="btn" class="submit" type="submit">Submit</button></form>
    <br />
    <div class="message"><%= data[dt-1].msg %></div>
    <br /><br />
    Your email serves to sign you in and as a means for us to send you a questionnaire. The answers to the questions will not be shared or sold, but used simply to help us calibrate the system so we can give you better feedback in the future. <br /><br />Sincerely, <br /><br />Ybigh team.
    <% } else{ %>
      We're only supporting tablet and desktop/laptop devices currently. We hope to support [all] device types in the near future
    <% } %>
  </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="libs/boostrap4/js/bootstrap.min.js"></script>
    
</body>
</html>